<script>
    var data=<?php echo $this->data;?>;
    $(function(){
        <?php if(!empty($this->apiWP["user"])):?>
        $.ajax({
            url: '<?php echo $this->apiWP["user"];?>',
            type: 'POST',
            data:JSON.stringify(data),
            contentType: "application/json",
            crossDomain: true,
            success: function(data) {
                $("#waiting").hide();
                $("#success").show();
                $("#continue").show();
                $("#resultSuccess").html(data);
                $.toast({
                    heading: 'Resultado OK!',
                    text: 'El usuario fue creado correctamente.',
                    position: 'top-right',
                    icon: 'success',
                    hideAfter: 5000, 
                    stack: 6
                });
            },  
            complete:function(){
                //$("#waiting")
                //loading.hide();
            },
            error: function(data, status, error) {
               // loading.hide();
               $("#waiting").hide();
               $("#danger").show();
               $("#continue").show();
               $("#resultDanger").html(data.responseText);
               $.toast({
                    heading: 'Error',
                    text: 'Ocurri√≥ un error al intentar crear el usuario',
                    position: 'top-right',
                    icon: 'error',
                    hideAfter: 5000, 
                    stack: 6
                });
               console.log(data);
            }
        });
        <?php else:?>
            location.href="<?php echo $this->url(['module'=>'admin','controller'=>'sinister','action'=>'index']);?>";
        <?php endif; ?>
    });
</script>